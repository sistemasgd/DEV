---
import Layout from '../layouts/Layout.astro';
import Container from '../components/Container.astro';
import JobCard from '../components/JobCard.astro';
import { jobs } from '../data/jobs';
import Divider from '../components/Divider.astro';
import JobSlider from '../components/jobslider/JobSlider.jsx';
---

<Layout title="Jobs | MangoBC">
	<Container>
		<section class="py-32 items-center flex relative overflow-hidden md:top-20">
			<div class="grid md:grid-cols-12 grid-cols-1 items-center gap-[30px]">
				<div class="lg:col-span-7 md:col-span-6 mt-14 md:mt-0">
					<div class="flex flex-col md:gap-4 m-auto lg:me-8 animate-fade animate-duration-[3000ms]">
						<h4
							class="lg:leading-normal leading-normal text-2xl lg:text-4xl mb-5 font-bold dark:text-white"
						>
							At <span
								class="before:block before:absolute before:-inset-2 before:-skew-y-6 before:bg-primary relative inline-block"
								><span class="relative text-black font-bold">Mango BC</span>
							</span> we are experiencing exciting growth.
						</h4>

						<p class="text-slate-600 text-lg max-w-xl pr-10 dark:text-white">
							And we actively look for talented people who want to evolve alongside us. If you are
							looking for a dynamic environment and development opportunities. We invite you to join
							our team!
						</p>
						<div class="mt-20">
							<a
								href="#vacancies"
								class="flex justify-center items-center font-bold shadow-slate-50 w-full md:w-1/2 rounded-[100px] h-10 bg-primary hover:bg-slate-400"
								>Join</a
							>
						</div>
					</div>
				</div>

				<div class="lg:col-span-5 md:col-span-6">
					<div class="relative">
						<div class="relative flex justify-end z-[1]">
							<img
								width="200"
								height="300"
								src="../images/jobs/img1.webp"
								class="lg:w-[400px] w-[280px] border-8 border-white rounded-3xl shadow-lg dark:shadow-gray-700 animate-fade-down animate-duration-1000"
								alt="mango team"
							/>
						</div>
						<div class="absolute md:-start-5 start-0 -bottom-16 z-[1]">
							<img
								width="200"
								height="300"
								src="../images/jobs/img2.webp"
								class="lg:w-[280px] w-[200px] border-8 border-white rounded-3xl shadow-lg dark:shadow-gray-700 animate-fade-down animate-duration-1000 animate-delay-500"
