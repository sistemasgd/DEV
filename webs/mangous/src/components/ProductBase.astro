---
export interface Props {
    src: string;
    alt: string;
    product_class: string;
    grid_order?: string;
    base_class: string;
}

const { src, alt, product_class, grid_order, base_class } = Astro.props;
---
<div class={`flex flex-col flex-wrap gap-3 justify-center items-center ${grid_order}`}>
    <img
        class={product_class}
        src={src}
        alt={alt}
    />
    <img
        class={base_class}
        src="images/marcas/base_marcas.webp"
        alt="base_prod"
    />
</div>
